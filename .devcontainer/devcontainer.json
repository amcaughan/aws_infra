{
  "name": "aws-infra-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "remoteUser": "dev",

  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-azuretools.vscode-docker",
        "amazonwebservices.aws-toolkit-vscode"
      ]
    }
  },

  "postCreateCommand": "aws --version && terraform --version && terragrunt --version && git --version"
}